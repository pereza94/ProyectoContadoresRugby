<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ScrumActivity"
    android:visibility="visible"
    android:clickable="true"
    android:id="@+id/layout_Mayor"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/penal">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:id="@+id/layoui"
        android:layout_toStartOf="@+id/gridLayout"
        android:weightSum="1"
        android:layout_above="@+id/txContPenales"
        android:layout_alignParentTop="true">

        <RadioGroup
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:showDividers="beginning"
            android:touchscreenBlocksFocus="true"
            android:checkedButton="@android:integer/config_shortAnimTime"
            android:layout_weight="0.55"
            android:gravity="fill_vertical">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carga sin Pelota"
                android:id="@+id/rbCargaSinPelota"
                android:textColor="#ffffffff"
                android:textColorHighlight="#ff4c3dff"
                android:visibility="visible"
                android:textColorLink="#ff2928ff"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:checked="false"
                android:textStyle="normal|bold|italic"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:gravity="top|left|bottom|fill_vertical|start|end|center_horizontal"
                android:hint="@string/abc_searchview_description_search"
                android:labelFor="@integer/abc_max_action_buttons"
                android:lines="@android:integer/status_bar_notification_info_maxnum"
                android:textColorHint="#ff0d0a0c" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Derrumbe de Maul"
                android:id="@+id/brDerrumbe"
                android:textColor="#ffffffff"
                android:textColorHighlight="#ff4c3dff"
                android:visibility="visible"
                android:textColorLink="#ff2928ff"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:checked="true"
                android:textStyle="normal|bold|italic"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:gravity="top|left|bottom|fill_vertical|start|end|center_horizontal"
                android:hint="@string/abc_searchview_description_search"
                android:labelFor="@integer/abc_max_action_buttons"
                android:lines="@android:integer/status_bar_notification_info_maxnum"
                android:textColorHint="#ff0d0a0c" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrada por el costado "
                android:id="@+id/rbEntradaDeCostado"
                android:textColor="#ffffffff"
                android:textColorHighlight="#ff4c3dff"
                android:visibility="visible"
                android:textColorLink="#ff2928ff"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:checked="true"
                android:textStyle="normal|bold|italic"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:gravity="top|left|bottom|fill_vertical|start|end|center_horizontal"
                android:hint="@string/abc_searchview_description_search"
                android:labelFor="@integer/abc_max_action_buttons"
                android:lines="@android:integer/status_bar_notification_info_maxnum"
                android:textColorHint="#ff0d0a0c" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inconducta"
                android:id="@+id/rbInconducta"
                android:textColor="#ffffffff"
                android:textColorHighlight="#ff4c3dff"
                android:visibility="visible"
                android:textColorLink="#ff2928ff"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:checked="false"
                android:textStyle="normal|bold|italic"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:gravity="top|left|bottom|fill_vertical|start|end|center_horizontal"
                android:hint="@string/abc_searchview_description_search"
                android:labelFor="@integer/abc_max_action_buttons"
                android:lines="@android:integer/status_bar_notification_info_maxnum"
                android:textColorHint="#ff0d0a0c" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carga indebida en Line"
                android:id="@+id/rbLine"
                android:textColor="#ffffffff"
                android:textColorHighlight="#ff4c3dff"
                android:visibility="visible"
                android:textColorLink="#ff2928ff"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:checked="true"
                android:textStyle="normal|bold|italic"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:gravity="top|left|bottom|fill_vertical|start|end|center_horizontal"
                android:hint="@string/abc_searchview_description_search"
                android:labelFor="@integer/abc_max_action_buttons"
                android:lines="@android:integer/status_bar_notification_info_maxnum"
                android:textColorHint="#ff0d0a0c" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manos en el ruck"
                android:id="@+id/rbManos"
                android:textColor="#ffffffff"
                android:textColorHighlight="#ff4c3dff"
                android:visibility="visible"
                android:textColorLink="#ff2928ff"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:checked="true"
                android:textStyle="normal|bold|italic"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:gravity="top|left|bottom|fill_vertical|start|end|center_horizontal"
                android:hint="@string/abc_searchview_description_search"
                android:labelFor="@integer/abc_max_action_buttons"
                android:lines="@android:integer/status_bar_notification_info_maxnum"
                android:textColorHint="#ff0d0a0c" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off Side"
                android:id="@+id/rbOffSide"
                android:textColor="#ffffffff"
                android:textColorHighlight="#ff4c3dff"
                android:visibility="visible"
                android:textColorLink="#ff2928ff"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:checked="false"
                android:textStyle="normal|bold|italic"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:gravity="top|left|bottom|fill_vertical|start|end|center_horizontal"
                android:hint="@string/abc_searchview_description_search"
                android:labelFor="@integer/abc_max_action_buttons"
                android:lines="@android:integer/status_bar_notification_info_maxnum"
                android:textColorHint="#ff0d0a0c" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scrum"
                android:id="@+id/rbScrum"
                android:textColor="#ffffffff"
                android:textColorHighlight="#ff4c3dff"
                android:visibility="visible"
                android:textColorLink="#ff2928ff"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:checked="false"
                android:textStyle="normal|bold|italic"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:gravity="top|left|bottom|fill_vertical|start|end|center_horizontal"
                android:hint="@string/abc_searchview_description_search"
                android:labelFor="@integer/abc_max_action_buttons"
                android:lines="@android:integer/status_bar_notification_info_maxnum"
                android:textColorHint="#ff0d0a0c" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tackle Alto"
                android:id="@+id/rbTackleAlto"
                android:textColor="#ffffffff"
                android:textColorHighlight="#ff4c3dff"
                android:visibility="visible"
                android:textColorLink="#ff2928ff"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:checked="true"
                android:textStyle="normal|bold|italic"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:gravity="top|left|bottom|fill_vertical|start|end|center_horizontal"
                android:hint="@string/abc_searchview_description_search"
                android:labelFor="@integer/abc_max_action_buttons"
                android:lines="@android:integer/status_bar_notification_info_maxnum"
                android:textColorHint="#ff0d0a0c" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retención"
                android:id="@+id/rbRetener"
                android:textColor="#ffffffff"
                android:textColorHighlight="#ff4c3dff"
                android:visibility="visible"
                android:textColorLink="#ff2928ff"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:checked="false"
                android:textStyle="normal|bold|italic"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:gravity="top|left|bottom|fill_vertical|start|end|center_horizontal"
                android:hint="@string/abc_searchview_description_search"
                android:labelFor="@integer/abc_max_action_buttons"
                android:lines="@android:integer/status_bar_notification_info_maxnum"
                android:textColorHint="#ff0d0a0c" />

            <RadioButton
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text="Tirarse en el Ruck"
                android:id="@+id/rbTirarseEnElRuck"
                android:textColor="#ffffffff"
                android:textColorHighlight="#ff4c3dff"
                android:visibility="visible"
                android:textColorLink="#ff2928ff"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:checked="false"
                android:textStyle="normal|bold|italic"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:gravity="top|left|bottom|fill_vertical|start|end|center_horizontal"
                android:hint="@string/abc_searchview_description_search"
                android:labelFor="@integer/abc_max_action_buttons"
                android:lines="@android:integer/status_bar_notification_info_maxnum"
                android:textColorHint="#ff0d0a0c" />

            <RadioButton
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:text="Tacleador no suelta a tacleado"
                android:id="@+id/rbTacleadorNoLibera"
                android:checked="false"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textColor="#ffffffff"
                android:textColorHighlight="#ff4c3dff"
                android:textColorLink="#ff2928ff"
                android:textStyle="normal|bold|italic"
                android:singleLine="false"
                android:longClickable="false"
                android:gravity="top|left|bottom|fill_vertical|start|end|center_horizontal"
                android:hint="@string/abc_searchview_description_search"
                android:labelFor="@integer/abc_max_action_buttons"
                android:lines="@android:integer/status_bar_notification_info_maxnum"
                android:textColorHint="#ff0d0a0c" />

        </RadioGroup>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="Estadisticas"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txContPenales"
            android:background="@android:color/holo_blue_bright"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="horizontal"
        android:useDefaultMargins="true"
        android:rowOrderPreserved="false"
        android:layoutMode="opticalBounds"
        android:importantForAccessibility="yes"
        android:layout_weight="1"
        android:id="@+id/gridLayout"
        android:layout_toEndOf="@+id/btSumarVisitantePenal">

    </GridLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sumar Local"
        android:id="@+id/btsumarLocalPenal"
        android:layout_row="9"
        android:layout_column="0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:background="@android:color/holo_green_dark" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SumarVisitante"
        android:id="@+id/btSumarVisitantePenal"
        android:layout_row="9"
        android:layout_column="16"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffffff"
        android:background="@android:color/holo_orange_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txContFKVisitante"
        android:layout_row="9"
        android:layout_column="15"
        android:layout_above="@+id/btSumarVisitantePenal"
        android:layout_alignEnd="@+id/gridLayout"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txContPenales"
        android:layout_row="9"
        android:layout_column="5"
        android:layout_alignTop="@+id/txContFKVisitante"
        android:layout_alignEnd="@+id/btsumarLocalPenal"
        android:textColor="@android:color/holo_green_dark" />

    <android.gesture.GestureOverlayView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gestureOverlayView"
        android:layout_alignBottom="@+id/layoui"
        android:layout_toEndOf="@+id/txContFKVisitante"
        android:layout_marginStart="37dp"></android.gesture.GestureOverlayView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/gestureOverlayView"
        android:layout_alignParentStart="true" />

</RelativeLayout>

