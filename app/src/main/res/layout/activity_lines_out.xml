
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.holamundo.alejandro.alejandro123.LineActivity"
    android:background="@drawable/lienout">
    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="13dp"
            android:layout_y="43dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ganado"
                    android:id="@+id/rbLineFAvorGanado"
                    android:checked="false"
                    android:textColor="#ffffffff" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perdio"
                    android:id="@+id/rbLineFAvorPerdido"
                    android:checked="false"
                    android:textColor="#ffffffff" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pelota Parcial"
                    android:id="@+id/rbLineFAvorPelotaParcial"
                    android:checked="false"
                    android:textColor="#ffffffff" />
            </RadioGroup>
        </LinearLayout>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line Out a Favor"
            android:id="@+id/rbLineAFavor"
            android:layout_x="96dp"
            android:layout_y="3dp"
            android:checked="true"
            android:textColor="#ffffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line Out en Contra"
            android:id="@+id/rbLineContra"
            android:layout_x="101dp"
            android:layout_y="177dp"
            android:checked="true"
            android:textColor="#ffffffff" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="14dp"
            android:layout_y="223dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganado"
                android:id="@+id/rbLineContraRobado"
                android:checked="false"
                android:textColor="#ffffffff" />

            <RadioButton
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:text="Perdido"
                android:id="@+id/rbLineContraPerdido"
                android:checked="false"
                android:textColor="#ffffffff" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pelota Torcida"
                android:id="@+id/rbLineContraPelotaParcial"
                android:checked="false"
                android:textColor="#ffffffff" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sumar"
            android:id="@+id/btSumarLine"
            android:layout_x="121dp"
            android:layout_y="433dp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txLineAFGAnado"
            android:layout_x="159dp"
            android:layout_y="55dp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txLineAFPerdido"
            android:layout_x="157dp"
            android:layout_y="78dp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="19dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txSLineAFPP"
            android:layout_x="163dp"
            android:layout_y="116dp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txLineRobado"
            android:layout_x="176dp"
            android:layout_y="233dp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txLineECPerdido"
            android:layout_x="176dp"
            android:layout_y="261dp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txLineECPP"
            android:layout_x="175dp"
            android:layout_y="303dp"
            android:textColor="#ffffffff" />

    </AbsoluteLayout>
</RelativeLayout>
